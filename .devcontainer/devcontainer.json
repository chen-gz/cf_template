{
    "name": "Minimal C++ Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "settings": {
                "C_Cpp.intelliSenseEngine": "default",
                "C_Cpp.errorSquiggles": "enabled"
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools-extension-pack",
                "twxs.cmake"
            ]
        }
    },
    // The remoteUser ensures the container runs with the non-root vscode user.
    "remoteUser": "vscode"
}