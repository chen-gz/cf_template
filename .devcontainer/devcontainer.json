{
    "name": "Minimal C++ Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "features": {
        "ghcr.io/devcontainers/features/bazel:1": {}
    },
    "customizations": {
        "vscode": {
            "settings": {
                "C_Cpp.intelliSenseEngine": "default",
                "C_Cpp.errorSquiggles": "enabled",
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "vscodevim.vim",
                "bazelbuild.vscode-bazel"
            ]
        }
    },
    "remoteUser": "vscode"
}